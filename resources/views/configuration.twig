{% extends 'layouts/app.twig' %}

{% block content %}
    <div class="col-md-8 col-md-offset-2">
        <h1>{{lang.label.configuration_label}}</h1><hr>
        <form action="#" method="post">
            <div class="form-group">
                <label>
                    <input type="radio" name="show_prices">
                    {{lang.label.show_purchase_prices_label}}
                </label>
            </div>
            <div class="form-group">
                <label>
                    <input type="radio" name="screensaver">
                    {{lang.label.screen_saver_tonen_na_label}}
                    <input type="number" value="60" min="0"> {{lang.label.minutes_label}}
                </label>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block" value="{{lang.label.update_label}}">
            </div>
            {{csrf_field() | raw}}
        </form>
    </div>
{% endblock %}
