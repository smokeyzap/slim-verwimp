{% extends 'layouts/app.twig' %}

{% block content %}
    <div class="container">
        <div class="row col-md-4 col-md-offset-4" style="margin-top: 50px;">
            <p class="text-center">
                <a href="{{base_url()}}"><img src="{{base_url()}}/public/logo/logo.png" width="300" height="100" alt="logo"></a>
            </p>
            <br>
        </div>
        <div class="row col-md-4 col-md-offset-4">
            {% include 'layouts/flash.twig' %}
            <form action="{{path_for('post.new.password')}}?token={{token}}" method="post" autocomplete="off">
                 <div class="form-group">
                    <label for="password1">Type the password you would like to use</label>
                    <input type="password" id="password1" placeholder="Type your password" name="password1" class="form-control input-lg" required>
                </div>
                <div class="form-group">
                    <label for="password2">Confirm password</label>
                    <input type="password" id="password2" placeholder="Confirm password" name="password2" class="form-control input-lg" required>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block btn-lg" value="Save">
                </div>
                <div class="form-group text-center">
                    <a href="{{path_for('index')}}">Login</a>
                </div>
                {{csrf_field() | raw}}
            </form>
        </div>
    </div>
{% endblock %}
