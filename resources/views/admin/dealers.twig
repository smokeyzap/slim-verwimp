{% extends 'layouts/admin/layouts/admin_app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-body">
					<p><a href="{{path_for('admin.get.add.dealer')}}" class="btn btn-primary"><i class="fa fa-plus"></i> {{lang.label.add_new_dealer}}</a></p>
				    <table class="table-condensed table-bordered table-hover" id="{{lang.label.product_table}}">
				    	<thead>
				    		<th>#</th>
				    		<th>{{lang.label.customer_number}}</th>
				    		<th>{{lang.label.customer_name}}</th>
				    		<th>{{lang.label.customer_address}}</th>
				    		<th>{{lang.label.customer_phone}}</th>
				    		<th>{{lang.label.customer_email}}</th>
				    		<th>{{lang.label.detail_info}}</th>
				    		<th>{{lang.label.action}}</th>
				    	</thead>
				    	<tbody>
				    		{% for d in dealers %}
							<tr>
								<td>{{loop.index}}</td>
								<td>{{d.customer_number}}</td>
								<td>{{d.name}}</td>
								<td>{{d.address}}</td>
								<td>{{d.phone}}</td>
								<td>{{d.email}}</td>
								<td><a href="#">{{lang.label.detail_info}}</a></td>
								<td>
									<a href="{{path_for('admin.edit.dealer', {'id': d.id})}}">{{lang.label.edit}}</a>
								</td>
							</tr>
				    		{% endfor %}
				    	</tbody>
				    </table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}